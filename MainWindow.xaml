<Window x:Class="CurrentTimeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Current Time App" Height="110" Width="250" 
        Background="#333"
        Top="-10"
        Left="1000"
        WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock x:Name="currentTimeText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,-20,0,0"
                   Foreground="White" Padding="0,10"/>
        <TextBlock x:Name="currentDateText" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,56,0,0"
                   Foreground="White" Padding="5"/>
    </Grid>
</Window>
